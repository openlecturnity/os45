                var imgPrevDisabled:Image = new Image();
                var imgPlayDisabled:Image = new Image();
                var imgNextDisabled:Image = new Image();
                var imgEndDisabled:Image = new Image();
                if (g_nStandardButtonState == ENABLED) {
